{
  "name": "JET AI - Travel Companion",
  "short_name": "JET AI",
  "description": "Your intelligent AI-powered travel companion for personalized travel experiences.",
  "start_url": "/?source=pwa",
  "display": "standalone",
  "background_color": "#050b17",
  "theme_color": "#4a89dc",
  "icons": [
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/apple-touch-icon.png",
      "sizes": "180x180",
      "type": "image/png",
      "purpose": "apple-touch-icon"
    }
  ],
  "orientation": "portrait",
  "categories": ["travel", "ai", "productivity"],
  "screenshots": [
    {
      "src": "/screenshots/home.jpg",
      "sizes": "1280x720",
      "type": "image/jpeg",
      "platform": "wide"
    },
    {
      "src": "/screenshots/chat.jpg",
      "sizes": "1280x720",
      "type": "image/jpeg",
      "platform": "wide"
    },
    {
      "src": "/screenshots/itinerary.jpg",
      "sizes": "1280x720",
      "type": "image/jpeg",
      "platform": "wide"
    },
    {
      "src": "/screenshots/mobile-home.jpg",
      "sizes": "750x1334",
      "type": "image/jpeg",
      "platform": "narrow"
    },
    {
      "src": "/screenshots/mobile-chat.jpg",
      "sizes": "750x1334",
      "type": "image/jpeg",
      "platform": "narrow"
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://jetai.app/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "shortcuts": [
    {
      "name": "Travel Cockpit",
      "short_name": "Cockpit",
      "description": "Open the JET AI Travel Cockpit",
      "url": "/chat",
      "icons": [{ "src": "/icons/chat-icon.png", "sizes": "96x96" }]
    },
    {
      "name": "Destinations",
      "short_name": "Explore",
      "description": "Discover new travel destinations",
      "url": "/destinations",
      "icons": [{ "src": "/icons/map-icon.png", "sizes": "96x96" }]
    },
    {
      "name": "Travel Blog",
      "short_name": "Blog",
      "description": "Read the latest travel guides and tips",
      "url": "/blog",
      "icons": [{ "src": "/icons/blog-icon.png", "sizes": "96x96" }]
    },
    {
      "name": "AI Features",
      "short_name": "AI",
      "description": "Explore JET AI's intelligent capabilities",
      "url": "/features",
      "icons": [{ "src": "/icons/features-icon.png", "sizes": "96x96" }]
    }
  ],
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  "display_override": ["standalone", "window-controls-overlay"],
  "iarc_rating_id": "",
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "photos",
          "accept": ["image/jpeg", "image/png", "image/webp"]
        }
      ]
    }
  }
}